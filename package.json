{
  "name": "@raipen/prisma-comment-migration",
  "version": "1.0.1",
  "description": "Generate MySQL COMMENT migrations from Prisma schema triple-slash comments",
  "bin": {
    "prisma-comment-migration": "./dist/index.js",
    "pcm": "./dist/index.js"
  },
  "type": "module",
  "files": [
    "dist",
    "README.ko.md"
  ],
  "scripts": {
    "build": "rm -rf dist/ && esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --banner:js='#!/usr/bin/env node' --packages=external && chmod +x dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raipen/prisma-comment-migration.git"
  },
  "keywords": [
    "prisma",
    "migration",
    "comments",
    "mysql",
    "database"
  ],
  "author": "raipen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/raipen/prisma-comment-migration/issues"
  },
  "homepage": "https://github.com/raipen/prisma-comment-migration#readme",
  "peerDependencies": {
    "prisma": ">=4.0.0",
    "@prisma/internals": ">=4.0.0"
  },
  "devDependencies": {
    "@prisma/internals": "^6.0.0",
    "@types/node": "^24.10.2",
    "esbuild": "^0.27.1",
    "prisma": "^6.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
